<%- include('template/header1') %>


<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-center">
        <div class="col-md-9 ftco-animate pb-5 text-center">
          <h2 class="mb-3 bread">Course - <%= course['courseTitle']%></h2>
          <p class="breadcrumbs"><span class="mr-2"><a href="dashboard">Dashboard <i class="ion-ios-arrow-forward"></i></a></span> <span>Course <i class="ion-ios-arrow-forward"></i></span></p>
        </div>
      </div>
    </div>
  </section>

     <section class="ftco-section">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 ftco-animate">
            <% course['videos'].forEach((video,index)=>{ %>
                <hr></hr>
                <div class="row">
                    <div class="col-md-12 d-flex ftco-animate">
                      <div class="blog-entry align-self-stretch d-md-flex">
                        <iframe 
                          class="block-20"
                          src=<%= video['url'] %>
                          frameborder="0" 
                          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                          allowfullscreen>
                        </iframe>
                        <div class="text d-block pl-md-4">
                          <h3 class="heading"><a href="#"><%= video['title'] %></a></h3>
                          <form class="form-horizontal" action="/remove-video/<%= id %>/<%= video['_id'] %>" method='post'>
                            <div class="form-group">        
                              <div class="col-sm-offset-2 col-sm-10">
                                <button class="btn btn-primary py-2 px-3" type="submit" class="btn btn-default">Remove this Video</button>
                              </div>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                </div>
                <hr></hr>
              <% }) %>
        </div> <!-- .col-md-8 -->
        <div class="col-lg-4 sidebar ftco-animate">
            <h3 class="heading-2">Description</h3>
            <p><%= course['Description']%></p>
        </div>
      </div>
      <form class="form-horizontal" action="/add-video/<%= id %>" method='post'>
        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Video Title:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="title"  name="title">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="url">Video URL:</label>
          <div class="col-sm-10">          
            <input type="text" class="form-control" id="url"  name="url">
          </div>
        </div>
        <div class="form-group">        
          <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-primary py-2 px-3" type="submit" class="btn btn-default">Add</button>
          </div>
        </div>
      </form>
    </div>
  </section> <!-- .section -->


<%- include('template/footer') %>